{
    /**************************************
    
     GEOMETRY
   
    通过四点坐标定义观测系统，计算中用前三个点计算映射关系，
    用第四个点验证计算结果！
   ***************************************/
    "geometry": {
        "p1": //Point#1
        {
            "line": 1,
            "cdp": 1,
            "x": 592000,
            "y": 4308000
        },
        "p2": //Point#2
        {
            "line": 1,
            "cdp": 2300,
            "x": 592000,
            "y": 4365475
        },
        "p3": //Point#3
        {
            "line": 2500,
            "cdp": 1,
            "x": 654475,
            "y": 4308000
        },
        "p4": //Point#4
        {
            "line": 2500,
            "cdp": 1,
            "x": 654475,
            "y": 4308000
        }
    },

    /***********************************
              INPUT

    定义地震数据输入文件，1个或多个文件，
    info部分可以指定一些参数
   ************************************/

    "input": {
        "prestk": "yes",
        "type": "dsk",
        "files": [
            "/data1/HLL/1.dsk",
            "/data1/HLL/2.dsk",
            "/data1/HLL/3.dsk"
        ],

        /****************************
		INPUT INFO
        附加参数信息
	*****************************/
        "info": {
            "format": "ibm",
            "ns": 10
        }
    },

    /***********************************
              OUTPUT
    输出参数
   ************************************/
    "output": {
        "stacked": "no",
        "offset": { //偏移距参数
            "min": 1500,
            "max": 1950,
            "step": 50
        },

        "path": "/data1/HLL/run1/", //输出路径

        "type": "dsk", //输出类型

        "regions": [ //可指定一个或多个输出网格区域

            {
                //============Region#0==================
                "line": {
                    "min": 1500,
                    "max": 1501,
                    "step": 1
                },
                "cdp": {
                    "min": 670,
                    "max": 1810,
                    "step": 1
                }
            },

            {
                //===========Region#1==================

                "line": {
                    "min": 1200,
                    "max": 1900,
                    "step": 1
                },
                "cdp": {
                    "min": 1400,
                    "max": 1401,
                    "step": 1
                }
            }
        ],

        "segments": [ //可指定一个或多个输出多段线段
            //===============Curve#0====================
            {
                "line": [ 1500, 1500, 1900, 1500 ],
                "cdp": [ 1000, 1700, 1400, 1000 ],
                "np": [ 200, 100, 300 ]
            },
            //===============Curve#1=====================
            {
                "line": [ 1500, 1500, 1900, 1500 ],
                "cdp": [ 1000, 1700, 1400, 1000 ],
                "np": [ 200, 100, 300 ]
            }

        ]

    },

    /***********************************
              VELOCITY
              指定速度场数据
   ************************************/
    "velocity": {
        "type": "dsk",
        "file0": "/data1/HLL/v0.bin",
        "file1": "/data1/HLL/v1.bin",

        //速度场权重： v=scale0*v0+scale1*v1
        "scale0": 0.9,
        "scale1": 0.1,

        /*****************************************
                   VELOCITY-GEOMETRY
       速度场的观测系统，通过四点坐标关系确定，可以和偏移计算的不同
	   ******************************************/

        "geometry": {
            "p1": //Point#1
            {
                "line": 1,
                "cdp": 1,
                "x": 592000,
                "y": 4308000
            },
            "p2": //Point#2
            {
                "line": 1,
                "cdp": 2300,
                "x": 592000,
                "y": 4365475
            },
            "p3": //Point#3
            {
                "line": 2500,
                "cdp": 1,
                "x": 654475,
                "y": 4308000
            },
            "p4": //Point#4
            {
                "line": 2500,
                "cdp": 1,
                "x": 654475,
                "y": 4308000
            }
        },

        /***********************************
	       VELOCITY-INFO
	************************************/

        "info": {
            "submin": 10,
            "submax": 1000,
            "subinc": 10,
            //"crs.min":1000
            "crsmin": 100000
        }
    },

    /***********************************
              XMIGT
    偏移程序运行控制参数
    ************************************/
    "xmigt": {
        "dimension": "3D",   //or "2D"
        "weight": "no",      //是否需要加权，真振幅偏移
        "restarted": "yes",   //是否需要重启动
        "tmpdir": "/tmp",     //临时磁盘路径
         
        "aperture": {           //孔径信息
            "time": [ 100, 2000, 3000, 6000 ],
            "apert": [ 3000, 4000, 5000, 6000 ],
            "apmax": 8000
        },

        "alias": {     //空间反假频率信息
            "line": 1,
            "cdp": 1
        }

    },

    /***********************************
              CheckPoint
    ************************************/
    "checkpoint": {    
        "dir": "/data2/xmigt",   //检查点文件路径，
        "time": 0.08, // in houres，  多长时间进行一次检查点备份操作
        "itrace": 0,   //已经偏移的道数目
        "nckpt": 4     //检查点的索引号
    }
}
